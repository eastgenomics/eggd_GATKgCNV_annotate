{
  "name": "GATKgCNV_annotate_v0.0.4",
  "title": "GATKgCNV_annotate_v0.0.4",
  "summary": "Dx wrapper to filter and annotate GATK CNV vcfs",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "sample_vcf",
      "label": "sample_segments.vcf file",
      "class": "file",
      "optional": false,
      "patterns": ["*_segments.vcf","*.vcf.gz"],
      "help": "GATK CNV vcf file of a sample"
    },
    {
      "name": "panel_bed",
      "label": "panel BED file",
      "class": "file",
      "optional": false,
      "patterns": ["*.bed"],
      "help": "List of regions in panel with gene, transcript and exon number for each, sorted in chromosome order"
    }
  ],
  "outputSpec": [
    {
      "name": "filtered_vcf",
      "label": "sample CNVs filtered by panel",
      "class": "file"
    },
    {
      "name": "annotated_tsv",
      "label": "filtered sample CNVs with exon level annotation",
      "class": "file"
    }
  ],
  "runSpec": {
    "distribution": "Ubuntu",
    "release": "20.04",
    "version": "0",
    "interpreter": "bash",
    "file": "src/filterannot.sh",
    "timeoutPolicy": {
      "*": {
        "hours": 1
      }
    },
    "assetDepends": [
      {
        "name": "htslib",
        "project": "project-Fkb6Gkj433GVVvj73J7x8KbV",
        "folder": "/app_assets/htslib/htslib_v1.14.0",
        "version": "1.14.0"
      },
      {
        "name": "bedtools",
        "project": "project-Fkb6Gkj433GVVvj73J7x8KbV",
        "folder": "/app_assets/bedtools/bedtools_v2.30.0",
        "version": "2.30.0"
      }
    ]
  },
  "developers":[
    "user-sophier",
    "org-emee_1"
  ],
  "authorizedUsers": [
    "org-emee_1"
  ],
  "access": {
    "allProjects": "VIEW",
    "project": "CONTRIBUTE",
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:eu-central-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_v2_x2"
        }
      }
    }
  }
}
